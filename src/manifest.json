{
    "name": "ChhoeTaigi 找台語",
    "description": "Hō͘ pīntōaⁿlâng ê Google Chrome Chhōe Tâigí Sûtián kesi",
    "version": "0.1.3",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "images/icon128.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16":  "images/icon16.png",
        "32":  "images/icon32.png",
        "48":  "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "https://chhoe.taigi.info/"
    ]
}
